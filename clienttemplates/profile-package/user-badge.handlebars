<div class="achievement-badge category-{{category}} achievement-badge-owned" title="{{typeLabel}}: {{badge.safeExtendedDescription}}">
  <div id="outline-box">
  <img src="{{badge.iconSrc}}" id="badge-icon"/>
  {{#if hasMultiple}}
    <div class="achievement-count">x{{count}}</div>
  {{/if}}
  <div class="achievement-text">
  <div class="achievement-title">{{badge.description}}</div>
  <div class="achievement-desc">
      הושג לאחרונה <abbr class="timeago" title="{{lastEarnedDate}}">{{lastEarnedDate}}</abbr>
      {{#if visibleContextName}}
        ב <strong>{{visibleContextName}}</strong>
        {{#if hasMultiple}}
          <span class="badge-context-hidden-link"><a href="#" onclick="Badges.showMoreContext(this);return false;">וגם ב<span class="ellipsis">...</span></a></span>
          <span class="badge-context-hidden" style="display:none;">
          {{#each listContextNamesHidden}}
             <strong>{{name}}{{#unless isLast}}, {{/unless}}</strong>
          {{/each}}
          </span>
        {{/if}}
      {{/if}}
  </div>
  </div>
  {{#if badge.points}}<div class="energy-points-badge">{{badge.points}}</div>{{/if}}
  </div>
</div>

