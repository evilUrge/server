<div class="user-info vertical-shadow clearfix">

    <div class="basic-user-info" style="float: left;">
      <div class="avatar-pic-container{{#if isEditable}} editable{{/if}}" style="float:left;" >
        <img src="{{avatarSrc}}" id="avatar-pic" class="avatar-pic" >
        <div class="avatar-change-overlay" style="display: none">שנו סמל אישי</div>
      </div>
      <div class="user-deets">
          {{#if isPhantom}}
             <a href="/login?continue=/postlogin?continue=/profile" class="simple-button action-gradient green">התחברו בשביל לקבל את הפרופיל שלכם</a>
          {{else}}
          <div>
              <span class="nickname">{{nickname}}</span>
          </div>
          {{/if}}
          <div>
              <span>מחובר <abbr class="timeago" title="{{dateJoined}}">{{dateJoined}}</abbr></span>
          </div>
          <div class="user-profile-controls clearfix">
          {{#if isEditable}}
              <ul class="dropdown">
                  <li>
                      <span id="edit-profile" class="simple-button action-gradient">עריכת פרופיל</span>
                      <ul class="sub_menu">
                        {{#if isFullyEditable}}
                        <li><a id="edit-basic-info" href="javascript:void(0)">עריכת מידע אישי</a></li>
                        {{/if}}
                        <li><a id="edit-display-case" href="javascript:void(0)">עריכת הצגת תיק</a></li>
                        <li><a id="edit-avatar" href="javascript:void(0)">עריכת סמל אישי</a></li>
                        {{#if isFullyEditable}}
                        <li><a id="edit-visibility" href="javascript:void(0)">לשנות הגדרות פרטיות</a></li>
                        {{/if}}
                      </ul>
                  </li>
              </ul>
          {{else}}
            <!--
              {{#unless isSelf}}<a href="javascript:void(0)" class="add-remove-coach simple-button action-gradient" style="{{#if isCoachingLoggedInUser}} display: none;{{/if}}">Add as a coach</a>{{/unless}}
              <a href="javascript:void(0)" class="add-remove-coach simple-button action-gradient" style="{{#unless isCoachingLoggedInUser}} display: none;{{/unless}}">Remove as a coach</a>
              -->
          {{/if}}
          </div>
          <div class="basic-stats clearfix">
              <div class="simple-stat">
                  <img class="summary-icon star" src="/images/profile-icons/inset-star.png">
                  <div class="stat-text">{{countExercisesProficient}}<span class="stat-divider">/</span>{{countExercises}}</div>
              </div>
              <div class="simple-stat">
                  <img class="summary-icon" src="/images/profile-icons/inset-camera.png">
                  <div class="stat-text">{{countVideosCompleted}}<span class="stat-divider">/</span>{{countVideos}}</div>
              </div>
              <div class="simple-stat"><span title="{{commafy points}} energy points" class="energy-points-badge" style="float:none; display:block; margin-bottom: 1px; margin-top: 2px; padding:0; line-height: 20px;">{{commafy points}}</span> נקודות אנרגיה</div>
          </div>
      </div>
    </div>
    <div class="sticker-book">
    </div>

</div>
{{#if isFullyEditable}}
<a href="javascript:void(0)" id="edit-visibility"
    class="edit-visibility visibility-toggler {{#if isPublic}}public{{else}}private{{/if}}">הפרופיל {{#if isPublic}}ציבורי{{else}}פרטי{{/if}}</a>
<div id="username-picker-container" class="modal fade hide" style="display: none;">
</div>
{{/if}}
