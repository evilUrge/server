{{#each badgeCollections}}
    <div id="category-{{category}}" style="display: none;">
      <div class="badge-description-container">
        <div class="badge-description-content">
            {{categoryDescription}}
        </div>
      </div>
      {{#if userBadges.length}}
      <div id="user-owned">
      <h2 style="display: block; margin-left: 10px;">תגים שהרוויחו</h2>
        {{#each userBadges}}
          {{> user-badge}}
        {{/each}}
        <div class="clear"></div>
      </div>
      {{/if}}
      <div id="all-badges">
        <h2 style="display: block; margin-left: 10px;">תגים אפשריים</h2>
        {{#each badges}}
          {{> badge}}
        {{/each}}
      </div>
      <div class="clear"></div>
    </div>
{{/each}}
