<div id="class-student-goals" class="{{colors}}">
    <div id="class-goal-filter-desc"></div>
    <div id="class-student-goal">
    {{#each rowData}}
        <div class="goal-row" data-id="{{rowID}}" data-student="{{student.email}}">
            <div class="student-name">
                <input class="goal-check" data-id="{{student.email}}" type="checkbox"/>
                {{#if goal.objectives}}
                    <span class="goal-count">({{goal_idx}}/{{student.goal_count}})</span>
                {{/if}}
                <a href="{{student.profile_url}}">{{student.nickname}}</a>
                {{#if goal.objectives}}
                    <div>
                        <span class="goal-start-time">מועד התחלה - {{goal.created_ago}}</span>
                        <span class="goal-update-time">מועד עדכון אחרון - {{goal.updated_ago}}</span>
                    </div>
                    {{#if goal.by_coach}}
                    <div class="goal-creator">יעד בהדרכה
                        <a class="goal-remove" href="#" data-id="{{goal.id}}">(הסר)</a>
                    </div>
                    {{/if}}
                {{/if}}
            </div>
            <div class="goal {{#if goal.completed}}{{#unless goal.abandoned}}complete{{/unless}}{{/if}}">
                {{#if goal.objectives}}
                    <ul class="inline-list objective-list">
                    {{#each goal.objectives}}
                        {{>goal-objectives}}
                    {{/each}}
                    </ul>
                {{else}}
                    <div class="no-goal">
                        {{student.nickname}} לא עובד כרגע על יעד כלשהו
                    </div>
                {{/if}}
            </div>
        </div>
    {{/each}}
    </div>
    <label><input class="goal-check-all" type="checkbox">בחר את כולם</label>
</div>
