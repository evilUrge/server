<div id="progress-summary-container" class="{{progress_type}}-progress">

  {{#each items}}
    <div class="item-row">
      <div class="item-name">
        <span>{{display_name}}</span>
      </div>

      <div id="left-column">
        {{#progressColumn side="left"}}
          {{> class-progress-column}}
        {{/progressColumn}}
      </div>

      <div id="right-column">
        {{#progressColumn side="right"}}
          {{> class-progress-column}}
        {{/progressColumn}}
      </div>

      <div style="clear: both;"></div>
    </div>
  {{/each}}
</div>
