<li class="activity-video clearfix {{#if isVideoCompleted}}completed{{/if}}">
    <div class="ach-text">
        <div class="clearfix">
            <span class="activity-image"></span>
            <div class="description">
                צפיתם ב- <span class="video-minutes">{{secondsToTime secondsWatched}}</span> מתוך <a href="{{relativeUrl}}">{{videoTitle}}</a>
            </div>
        </div>
        <div class="activity-controls clearfix">
	        <span class="time timeago" title="{{dt}}">{{dt}}</span>
	    </div>
    </div>
</li>
